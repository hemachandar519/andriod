<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gotogyms.gtogapp.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:id="@+id/user_profile_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/profile_section"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/registerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:shadowColor="@color/colorAccent"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="My Profile"
            android:gravity="center"
            android:textSize="20dp" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contact_user_name">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_conusrname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_user_icon"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:ems="10"
                android:inputType="textPersonName|textCapWords"
                android:textAlignment="center"
                android:textSize="18sp"
                android:visibility="gone"
                android:layout_gravity="center_horizontal" />
            <TextView
                android:id="@+id/view_conusrname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_user_icon"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:ems="10"
                android:inputType="textPersonName|textCapWords"
                android:textAlignment="center"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/singup_input_layout_name">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_conusremail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:ems="10"
                android:drawableLeft="@drawable/ic_email_icon"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:inputType="textEmailAddress"
                android:textAlignment="center"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@+id/edit_conusrname" />
            <TextView
                android:id="@+id/view_conusremail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:drawableLeft="@drawable/ic_email_icon"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:inputType="textEmailAddress"
                android:textAlignment="center"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@+id/view_conusrname" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/singup_input_layout_mobile">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_conusrmobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/ic_phone_icon"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:ems="10"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/edit_conusremail" />
            <TextView
                android:id="@+id/view_conusrmobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/ic_phone_icon"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:ems="10"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/view_conusremail" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_city">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_usercity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/ic_city_icon"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:ems="10"
                android:inputType="text"
                android:textAlignment="center"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/edit_conusrmobile" />
            <TextView
                android:id="@+id/view_usercity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/ic_city_icon"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:ems="10"
                android:inputType="text"
                android:textAlignment="center"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/view_conusrmobile" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/user_gender">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/ic_gender_icon"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:ems="10"
                android:inputType="text"
                android:textAlignment="center"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/edit_usercity" />
            <TextView
                android:id="@+id/view_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/ic_gender_icon"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:ems="10"
                android:inputType="text"
                android:textAlignment="center"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/view_usercity" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dob_layout">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_userdob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Date of Birth"
                android:visibility="gone"
                android:drawableLeft="@drawable/ic_cake_icon"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:ems="10"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/edit_usercity" />
            <TextView
                android:id="@+id/view_userdob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:drawableLeft="@drawable/ic_cake_icon"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:ems="10"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@+id/view_usercity" />
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <Button style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edit_details"
                android:layout_weight="1"
                android:layout_alignParentBottom="true"
                android:text="EDIT"
                android:textColor="#000000" />
            <Button style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/update_details"
                android:layout_weight="1"
                android:layout_alignParentBottom="true"
                android:text="UPDATE"
                android:visibility="gone"
                android:textColor="#000000" />

        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</FrameLayout>
