<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >
        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
            android:drawablePadding="2dp"
            android:id="@+id/home_user_email"
            android:text="Email"
            android:typeface="monospace"
            android:textStyle="bold"
            android:textSize="28dp"
            android:paddingTop="10dp"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:paddingBottom="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_user_phone"
            android:drawablePadding="2dp"
            android:id="@+id/home_user_phone"
            android:text="Contact"
            android:typeface="monospace"
            android:textStyle="bold"
            android:textSize="28dp"
            android:paddingTop="10dp"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:paddingBottom="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_person_outline_black_24dp"
            android:drawablePadding="2dp"
            android:id="@+id/home_user_name"
            android:text="Name"
            android:typeface="monospace"
            android:textStyle="bold"
            android:textSize="28dp"
            android:paddingTop="10dp"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:paddingBottom="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
            android:drawablePadding="2dp"
            android:id="@+id/home_user_gender"
            android:text="Gender"
            android:typeface="monospace"
            android:textStyle="bold"
            android:textSize="28dp"
            android:paddingTop="10dp"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:paddingBottom="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_city_icon"
            android:drawablePadding="2dp"
            android:id="@+id/home_user_city"
            android:text="City"
            android:typeface="monospace"
            android:textStyle="bold"
            android:textSize="28dp"
            android:paddingTop="10dp"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:paddingBottom="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_birthday_icon"
            android:drawablePadding="2dp"
            android:id="@+id/home_user_dob"
            android:text="Birthday"
            android:typeface="monospace"
            android:textStyle="bold"
            android:textSize="28dp"
            android:paddingTop="10dp"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:paddingBottom="10dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textStyle="bold"
            android:textSize="28dp"
            />
    </LinearLayout>
