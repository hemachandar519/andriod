<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gotogyms.gtogapp.RegisterFragment">
    <ScrollView
        android:id="@+id/user_registration_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:id="@+id/reg_section"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Sign Up"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/singup_input_layout_name">
            <EditText
                android:id="@+id/newusremail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Id"
                android:drawableLeft="@drawable/ic_email_icon"
                android:drawablePadding="8dp"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="textEmailAddress"
                android:textAlignment="center"
                android:textSize="20dp"
                android:layout_gravity="center_horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/singup_input_layout_password">
            <EditText
                android:id="@+id/newuserpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="Password"
                android:drawableLeft="@drawable/ic_password_icon"
                android:drawablePadding="8dp"
                android:ems="10"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:textSize="20dp"
                android:gravity="center_horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/newusremail" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/singup_input_layout_cnfpassword">
            <EditText
                android:id="@+id/newusercnfpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="Re-enter Password"
                android:drawableLeft="@drawable/ic_password_icon"
                android:drawablePadding="8dp"
                android:ems="10"
                android:inputType="textPassword"
                android:textAlignment="center"
                android:textSize="20dp"
                android:gravity="center_horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/newuserpass" />
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/singup_input_layout_mobile">
            <EditText
                android:id="@+id/newusermobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="User Mobile"
                android:drawableLeft="@drawable/ic_phone_icon"
                android:drawablePadding="8dp"
                android:ems="10"
                android:inputType="number"
                android:textAlignment="center"
                android:textSize="20dp"
                android:gravity="center_horizontal"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/newusercnfpass" />
        </android.support.design.widget.TextInputLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <Button style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/usersignup"
                android:layout_weight="1"
                android:layout_toRightOf="@id/newusermobile"
                android:text="Sign Up"
                android:layout_marginBottom="20dp"
                android:textColor="#000000" />
        </LinearLayout>
        <TextView android:id="@+id/user_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dip"
            android:layout_marginBottom="5dip"
            android:text="Existing User! SignIn here"
            android:gravity="center"
            android:textSize="20dip"
            android:textColor="#025f7c"/>
    </LinearLayout>
    </ScrollView>
</FrameLayout>
